<% include header %>

	
		<div class="blog-post">
			<h3>Comments</h3>
			<% if(locals.flash && locals.flash.error) { %>
			<div class="callout alert">
				<%= flash.error %>
			</div>
			<% } %>
			<% if(locals.flash && locals.flash.success) { %>
			<div class="callout success">
				<%= flash.success %>
			</div>
			<% } %>
			<form action="/" method="POST">
				<div class="row">
					<div class="medium-12 columns">
						<label>
							Composer votre message
							<textarea placeholder="None" name="message" id="message"></textarea>
						</label>
					</div>
				</div>
				<div class="row">
					<div class="medium-12 columns">
						<button type="submit" class="expanded button" href="#">Envoyer</button>
					</div>
				</div>
			</form>
			<div class="row">
				<div class="medium-12 columns">
					<% for(comment of all_comments) { %>
					<div class="callout">
						<a href="comment/<%= comment.id %>"><%= comment.content %></a>
						<p><%= comment.created_at %></p>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	
	
<% include footer %>